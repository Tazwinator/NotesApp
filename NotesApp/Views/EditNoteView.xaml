<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.Views.EditNoteView"
             xmlns:viewmodels="clr-namespace:NotesApp.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:EditNoteViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>

            <Button Command="{x:Binding SaveNote}"
                    Text="Save"/>
            <Button Command="{x:Binding DelNote}"
                    Text="Delete"/>
            <Editor Text="{x:Binding CurrentNoteContent}"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NotesApp.Views.MainNotesView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Content>

        <ListView BackgroundColor="Beige" ItemsSource="{Binding testText}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell x:Name="myItem" Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>

    </ContentPage.Content>

</ContentPage>